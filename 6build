#!/usr/bin/env perl

# Copyright (C) 2015 by cygx <cygx@cpan.org>
# Distributed under the Boost Software License, Version 1.0

use strict;
use warnings;

my %TABLE = (
    status => sub {},
    config => sub {},
    reconfig => sub {},
    tryconfig => sub {},
    make => sub {},
    autoconf => \&autoconf,
    automake => sub {},
    '-h' => \&help,
    '--help' => \&help,
);

sub autoconf {
    open my $fh, '<', 'auto.6' or die "Failed to open 'auto.6'";
    while (<$fh>) {
        chomp;
    }
    close $fh;
    exit;
}

sub help {
    print <<'EOT';
Usage:

  6build [-C[ ]<DIR>] status

  6build [-C[ ]<DIR>] config <BUILD>
         [--<CONFIG>=<NAME>...] [--<FLAG>...] [<VAR>=<VALUE>...]

  6build [-C[ ]<DIR>] make <TARGET>...

  6build [-C[ ]<DIR>] {reconfig|tryconfig} [<BUILD>]
         [--<CONFIG>=<NAME>...] [--<FLAG>...] [<VAR>[~|+|-]=<VALUE>...]
         [--no-<CONFIG|FLAG|VAR>...]

  6build [-C[ ]<DIR>] {autoconf|automake <TARGET>...}
         [--<CONFIG>=<NAME>...] [--<FLAG>...] [<VAR>=<VALUE>...]
EOT
}

sub unknown {
    $_ = shift;
    my $type = /^-/ ? 'flag' : 'subcommand';
    die "Unknown $type '$_'";
}

if (@ARGV && $ARGV[0] =~ /^-C(.*)/) {
    shift @ARGV;
    my $dir = $1 || shift(@ARGV) || die "No dir specified to cd into";
    chdir($dir) or die "Cannot cd into '$dir'";
}

($TABLE{@ARGV ? $ARGV[0] : '-h'} // \&unknown)->(@ARGV);

__END__

=pod

=encoding utf8

=head1 NAME

6build - Yet another build system

=head1 SYNOPSIS

    6build status

    6build config win32 --debug
    6build make test

    6build tryconfig --no-debug
    6build make test

    6build reconfig --no-debug
    6build make install

    6build autoconf
    6build make test

    6build automake test install


